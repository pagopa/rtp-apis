<!--
This policy validate content and sign of MIL JWT token
-->
<fragment>
  <validate-jwt header-name="Authorization" failed-validation-httpcode="401"
    require-expiration-time="true" require-scheme="Bearer" require-signed-tokens="true"
    output-token-variable-name="milToken">
    <openid-config url="${mc_shared_base_url}/auth/.well-known/openid-configuration" />
    <issuers>
      <issuer>${mc_shared_base_url}/auth</issuer>
    </issuers>
    <required-claims>
      <claim name="groups" match="any">
        <value>${group_name}</value>
      </claim>
    </required-claims>
  </validate-jwt>
</fragment>